<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUpType"
    android:background="@color/app_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/events_seeker_signup">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cultural Events Seeker"
            android:layout_centerInParent="true"
            android:textSize="25sp"
            android:textStyle="bold"
            android:id="@+id/txv_seeker"
            android:layout_below="@id/seeker_logo"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/seeker_logo"
            android:layout_centerInParent="true"
            android:id="@+id/seeker_logo"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/initiative_founder_signup">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cultural Initiative Founder"
            android:layout_centerInParent="true"
            android:textSize="25sp"
            android:textStyle="bold"
            android:id="@+id/txv_founder"
            android:layout_below="@id/founder_logo" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/founder_logo"
            android:layout_centerHorizontal="true"
            android:id="@+id/founder_logo"/>
    </RelativeLayout>

</LinearLayout>