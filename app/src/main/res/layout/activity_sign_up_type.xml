<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFA87934"
    android:orientation="vertical"
    tools:context=".SignUpType">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="Please choose user type"
        android:textSize="25sp" />


    <RelativeLayout
        android:id="@+id/events_seeker_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@color/app_background">

        <TextView
            android:id="@+id/txv_seeker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seeker_logo"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:text="Cultural Events Seeker"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/seeker_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/seeker_logo" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/initiative_founder_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#46EBD2B2">

        <TextView
            android:id="@+id/txv_founder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/founder_logo"
            android:layout_centerInParent="true"
            android:text="Cultural Initiative Founder"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/founder_logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:src="@drawable/founder_logo" />
    </RelativeLayout>

</LinearLayout>