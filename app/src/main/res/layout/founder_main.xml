<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FounderMainActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="238dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="60dp"
        android:gravity="center"
        android:text="Initiative Name"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_founder_name_welcome"
        android:layout_below="@id/textView"
        android:text="Welcome Back Founder Name!"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"/>


            <Button
        android:id="@+id/button2"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/textView_founder_name_welcome"
        android:layout_centerVertical="true"
        android:layout_marginStart="35dp"
        android:text="Add Event"
        android:textSize="14sp"
        app:backgroundTint="@color/button_background"
        android:background="@drawable/button_background" />

            <Button
                android:id="@+id/button3"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_founder_name_welcome"
                android:layout_marginLeft="63dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="35dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/button2"
                android:background="@drawable/button_background"
                android:text="My Events"
                android:textSize="14sp"
                app:backgroundTint="@color/button_background" />

            <Button
                android:id="@+id/button4"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/button2"
                android:layout_marginStart="35dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_background"
                android:text="Edit Profile"
                android:textSize="14sp"
                app:backgroundTint="@color/button_background" />

            <Button
                android:id="@+id/button"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="35dp"
                android:layout_toRightOf="@+id/button4"
                android:layout_below="@id/button3"
                android:layout_marginEnd="35dp"
                android:text="View Initiative's Profile"
                app:backgroundTint="@color/button_background"
                android:background="@drawable/button_background"
                android:textSize="14sp" />
        </RelativeLayout>
    </ScrollView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleLarge"
        android:id="@+id/progressBarFounderMainActivity"
        android:elevation="10dp"
        android:visibility="gone"
        android:layout_centerInParent="true" />


</RelativeLayout>