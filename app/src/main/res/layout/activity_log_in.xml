<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AE9571"
    tools:context=".LogIn"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".35" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="true"
        android:text="Welcome Back ! "
        android:textSize="30sp"
        android:layout_below="@id/imageViewLogo"
        android:layout_centerHorizontal="true"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="132dp" />

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />

    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/link_to_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Don`t have an account yet ? "
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textview_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Sign up Now "
                android:textColor="@color/button_text"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--  Email Label -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:drawableLeft="@drawable/email"
                android:text=" Email or Username"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <!--  Password Label -->

            <EditText
                android:id="@+id/edittext_email_login"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:hint="aaa@......"
                android:inputType="textEmailAddress"
                android:singleLine="true" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyleLarge"
                android:layout_marginLeft="160dp"
                android:layout_marginRight="160dp"
                android:elevation="10dp"
                android:visibility="gone"
                android:id="@+id/progressBarLogin"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:contentDescription="Input password"
                android:drawableLeft="@drawable/lock"
                android:text=" Password"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="32dp"
                    android:id="@+id/show_hide_pwd"
                    android:layout_marginTop="35dp"/>

                <EditText
                    android:id="@+id/edittext_password_login"
                    android:layout_width="352dp"
                    android:layout_height="82dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:hint="123456Aa"
                    android:inputType="textPassword"
                    android:password="true"
                    android:singleLine="true"
                    tools:ignore="ExtraText" />


            </LinearLayout>

            <TextView
                android:id="@+id/textview_forgot_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Forgot your password?"
                android:textColor="@color/button_text" />



            <!-- Login button -->
            <Button
                android:id="@+id/button_login"
                android:layout_width="fill_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#A87934"
                android:onClick="LogIn"
                android:text="Login"
                android:textColor="@color/black" />
            <!-- Link to Registration Screen -->

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>